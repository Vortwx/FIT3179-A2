{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bump chart showing the total receipts for selected states over the years.",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Vortwx/FIT3179-A2/refs/heads/main/data/Total%20Receipt%20Rank.csv"
  },
  "params": [{
    "name": "stateFilter",
    "select": {
      "type": "point",
      "fields": ["State"]
    },
    "bind":"legend",
    "value":"Johor"
  }],
  "mark": {"type": "line", "point": {"size":500}, "strokeWidth": 3},
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "sort": "descending",
      "scale": {"domain": [0.5, 13.5]}
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "legend": {"title": "State"},
      "scale": {
        "range": [
          "#000000",
          "#8C564B",
          "#696969",
          "#FFA500",
          "#87CEEB",
          "#FFFF00",
          "#800080",
          "#A52A2A",
          "#FF69B4",
          "#40E0D0",
          "#00008B",
          "#32CD32",
          "#FF00FF"
        ]             
      }  
    },
    "opacity": {
      "condition": {
        "param": "stateFilter",
        "value":1
      },
      "value":0.1
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {
        "field": "Total Receipts in Million",
        "type": "quantitative",
        "title": "Total Receipts (in Million Ringgit)"
      },
      {
        "field": "Rank",
        "type": "ordinal",
        "title": "Rank: "
      }
    ]
  },
  "config": {}
}