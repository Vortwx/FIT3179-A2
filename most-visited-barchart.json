{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Vortwx/FIT3179-A2/refs/heads/main/data/Most-Visited-Place.csv"
  },
  "width": 500,
  "height": 400,
  "params": [
    {
      "name": "selectedState",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Pulau Pinang",
          "Perak",
          "Perlis",
          "Selangor",
          "Terengganu",
          "Sabah",
          "Sarawak",
          "W.P. Kuala Lumpur",
          "W.P. Labuan",
          "W.P. Putrajaya"
        ],
        "name": "State: "
      }
    }
  ],
  "transform": [
    {
      "filter": "selectedState === 'All' || datum.State === selectedState"
    },
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Type"]
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Type",
          "type": "ordinal",
          "axis": {"labelAngle": 0, "grid": false},
          "sort": "-x"
        },
        "x": {
          "field": "Count",
          "type": "quantitative",
          "scale": {"type": "linear", "nice": true},
          "axis": {
            "ticks": false,
            "grid": false
          }
        },
        "color": {
          "value": "#6083b9"
        },
        "tooltip": [
          {
            "field": "Type",
            "type": "nominal",
            "title": "Type of destination"
          },
          {
            "field": "Count",
            "type": "quantitative",
            "title": "Occurrence"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3,
        "dy": 0,
        "color": "black"
      },
      "encoding": {
        "x": {"field": "Count", "type": "quantitative"},
        "y": {"field": "Type", "type": "ordinal", "sort": "-x"},
        "text": {"value": "The only resort that Malaysians love to visit is Genting Highlands"},
        "opacity": {
          "condition": {
            "test": "selectedState === 'All' && (datum.Type == 'Resort')",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -300,
        "dy": 100,
        "color": "black",
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"field": "Count", "type": "quantitative"},
        "y": {"field": "Type", "type": "ordinal", "sort": "-x"},
        "text": {"value": "All 5 most visited places in Kuala Lumpur is Shopping Mall"},
        "opacity": {
          "condition": {
            "test": "selectedState === 'All' && (datum.Type == 'Shopping Mall')",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": "rule",
      "transform": [
        {
          "filter": "(datum.Type === 'Shopping Mall' && selectedState === 'All')"
        }
      ],
      "encoding": {
        "x": {"value": 350},
        "y": {"value":100},
        "x2": {"value": 400}, 
        "y2": {"value": 42}, 
        "color": {"value": "black"}
      }
    }
  ],
  "config": {}
}
