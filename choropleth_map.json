{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1200,
  "height": 560,
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "selectedYear",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5, "fill": "lightgray"},
      "data": {
        "url": "https://raw.githubusercontent.com/Vortwx/FIT3179-A2/refs/heads/main/js/ne_10m_neighbouring_countries.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
      }
    },
    {
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "data": {
        "url": "https://raw.githubusercontent.com/Vortwx/FIT3179-A2/refs/heads/main/data/Malaysia%20Domestic%20Tourism%202015-2023.csv"
      },
      "transform": [
        {
          "lookup": "States",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vortwx/FIT3179-A2/refs/heads/main/js/ne_10m.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_10m_admin_1_states_provinces"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == selectedYear"}
      ],
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "total_visitor_per_1k_pop",
          "title": "visitors per 1000 population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [25, 50, 75, 100, 125],
            "range": ["#ffffcc", "#d9f0a3", "#addd8e", "#78c679", "#31a354", "#006837"]
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "title": "Visitors per 1000 Population"
          }
        },
        "tooltip": [
          {"field": "States", "type": "nominal", "title": "State"},
          {
            "field": "total_visitor_per_1k_pop",
            "type": "quantitative",
            "title": "Domestic Visitors Density (per 1000 population)",
            "format": ".2f"
          },
          {"field": "Visitors", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {"type": "text", "align": "center", "baseline": "middle", "fontSize": 10, "dy": -10},
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative",
          "aggregate": "mean"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative",
          "aggregate": "mean"
        },
        "text": {"field": "States", "type": "nominal"}
      },
      "transform": [
        {"calculate": "datum.geo.geometry.coordinates[0]", "as": "longitude"},
        {"calculate": "datum.geo.geometry.coordinates[1]", "as": "latitude"}
      ]
    }
  ],
  "config": {}
}
